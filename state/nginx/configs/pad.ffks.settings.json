{
  "title": "Etherpad",
  "favicon": "favicon.ico",

  "ip": "127.0.0.1",
  "port": 10002,

  // Database: Postgres or SqLite?
  //"dbType": "postgres",
  //  "dbSettings": {
  //    "user":     "ffks_pad",
